<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">
    <!--android:background="@drawable/futsall_background_2"> -->




    <TextView
        android:id="@+id/championshipName_create_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/simplewhite"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:paddingTop="5pt"
        android:paddingBottom="5pt"
        android:text="mon_championat"
        android:textColor="@color/simpleblack"
        android:textSize="12pt"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/teams"
        android:layout_marginRight="10pt"
        android:layout_marginLeft="10pt"
        app:layout_constraintVertical_chainStyle="spread_inside"
    />


    <ListView
        android:id="@+id/teams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/championshipName_create_team"
        app:layout_constraintBottom_toTopOf="@id/create_team"
        android:layout_marginRight="10pt"
        android:layout_marginLeft="10pt"
        app:layout_constraintHeight_default="wrap"
        app:layout_constrainedHeight="true"
        app:layout_constraintVertical_weight="1">

    </ListView>


    <LinearLayout
        android:id="@+id/create_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/teams"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_marginRight="10pt"
        android:layout_marginLeft="10pt"
        >

        <EditText
            android:id="@+id/team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="team name"
        />

        <Button
            android:id="@+id/add_team_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="create team"
            android:textAllCaps="false"
            android:textSize="8pt"
        />

        <Button
            android:id="@+id/create_championship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create_team"
            android:text="create championship"
            android:textAllCaps="false"
            android:textSize="8pt"
            android:layout_marginBottom="10pt"
        />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
