<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/futsall_background_2">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/futsall_logo"
        app:layout_constraintBottom_toTopOf="@id/championshipName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.25"
        android:layout_marginBottom="35dp"
    />

    <EditText
        android:id="@+id/championshipName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10mm"
        android:layout_marginRight="10mm"
        android:gravity="center"
        android:hint="championship name"
        android:textSize="12pt"
        app:layout_constraintBottom_toTopOf="@id/buttonsHolder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginBottom="40dp"
        android:background="@color/simplewhite"
    />


    <LinearLayout
        android:id="@+id/buttonsHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/championshipName">

        <Button
            android:id="@+id/create_championship_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5mm"
            android:text="create"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/choose_championship_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5mm"
            android:text="choose"
            android:textAllCaps="false" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/all_right_reserved"
        android:gravity="center"
        android:textSize="8pt"
        android:layout_marginBottom="4pt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/simpleblack"
    />


</androidx.constraintlayout.widget.ConstraintLayout>