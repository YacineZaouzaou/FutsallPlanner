<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants"
            android:layout_weight="2">
            <com.google.android.material.chip.Chip
                android:id="@+id/matchTeam1Player1"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIcon="@drawable/ic_person"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/matchTeam1Player2"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIcon="@drawable/ic_person"/>
        </LinearLayout>

        <TextView
            android:id="@+id/matchScoreTeam1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/matchScoreTeam2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginTop="60dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants"
            android:gravity="end"
            android:layout_weight="2">
            <com.google.android.material.chip.Chip
                android:id="@+id/matchTeam2Player1"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIcon="@drawable/ic_person"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/matchTeam2Player2"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIcon="@drawable/ic_person"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/header"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:weightSum="6">
        <Button
            android:id="@+id/removeScoreTeam1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_remove_circle"
            android:layout_margin="5dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/addScoreeam1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_add_circle"
            android:layout_margin="5dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/addScoreeam2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_add_circle"
            android:layout_margin="5dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/removeScoreeam2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_remove_circle"
            android:layout_margin="5dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@+id/buttons">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/finishMatch"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:backgroundTint="#009688"
            android:text="Finish"
            android:textSize="15dp"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_check_circle"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:rippleColor="@color/colorAccent"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="2dp" />
    </LinearLayout>

</LinearLayout>